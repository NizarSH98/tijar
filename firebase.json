{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/categories",
        "destination": "/db.json"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
